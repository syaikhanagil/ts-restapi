{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended",
        "airbnb"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "import",
        "prettier",
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": "off",
        "max-len": "warn",
        "camelcase": "off",
        "semi": [ "error", "always" ],
        "indent": [ "error", 4 ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "arrow-body-style": "off",
        "import/no-unresolved": "error",
        "import/extensions": "off",
        "object-curly-newline": "off",
        "no-param-reassign": "off"
    }
}